{
    "compilerOptions": {
      "moduleResolution": "Node",
      "lib": ["ES2017", "DOM"],
      "target": "ES2017",
      "module": "ES6",
      "preserveConstEnums": true,
      "outDir": "dist",
      "sourceMap": false,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "nanogl-gltf" : [
          "../../src/*"
        ],
        "*": [
          "./src/*",
          "../../node_modules/*"
        ]
      }
    },
    "include" : [
      "src/**/*",
      "../../src/**/*",
    ]
  }
  